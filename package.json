{
  "scripts": {
    "start": "webpack-dev-server --config ./config/webpack/webpack.config.js",
    "build": "webpack --config ./config/webpack/webpack.config.js",
    "lint": "tslint './src/**/*.ts'",
    "fmt": "prettier --write './src/**/*.ts' '*.html'"
  },
  "dependencies": {
    "phaser": "^3.15.1"
  },
  "devDependencies": {
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.1.3",
    "lint-staged": "^8.0.4",
    "prettier": "^1.15.1",
    "ts-loader": "^5.2.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.3",
    "webpack": "^4.22.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "tslint",
      "git add"
    ],
    "*.html": [
      "prettier --write",
      "git add"
    ]
  }
}
